{
    "manifest_version": 2,

    "name": "Copy Buddy",
    "version": "0.1.1",

    "description": "A place to store things that you want to copy/paste later",

    "icons": {},
    "author": "christopher floess",

    "browser_action": {
        "default_icon": "copy-buddy.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "storage",
        "https://ajax.googleapis.com/"
    ]
}
